<p id="notice"><%= notice %></p>
  <h2><%= "#{@candidate.first} #{@candidate.last}" %> </h2>
<ul>
<li>
  <b>Elected:</b>
  <%= (@candidate.elected ? "Yes" : "No") %>
</li>

<li>
  <b>Year:</b>
  <%= @candidate.year %>
</li>

<li>
  <b>Last:</b>
  <%= @candidate.last %>
</li>

<li>
  <b>Suffix:</b>
  <%= @candidate.suffix %>
</li>

<li>
  <b>First:</b>
  <%= @candidate.first %>
</li>

<li>
  <b>Middle:</b>
  <%= @candidate.middle %>
</li>

<li>
  <b>Party:</b>
  <%= @candidate.party %>
</li>

<li>
  <b>District:</b>
  <%= @candidate.district %>
</li>

<li>
  <b>Office:</b>
  <%= @candidate.office %>
</li>
</ul>

<h3>Contributions Summary</h3>
<table>
  <tr><th>Number of Contributors</th>   <td> <%= @contributor_number %> </td></tr>
  <tr><th>Company Contributions</th>    <td> <%= @company_contributions.to_f/100 %> </td></tr>
  <tr><th>Individual Contributions</th> <td> <%= @personal_contributions.to_f/100 %> </td></tr>
  <tr><th>Total Contributions</th>      <td> <%= @contribution_total.to_f/100 %> </td></tr>
</table>

<h3>Contributors</h3>

