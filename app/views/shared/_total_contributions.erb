<div id='total_contribution'>
 <%= @total_message %>: <%=  @total_contributions.to_f/100 %><br>
  <table id="contributions_analysis">
   <title>Breakdown of the number and amount for each kind of contributor</title>
   <tr> <th colspan=2>Contributor</th><th colspan=2>Contributions</th></tr>
   <tr> <th>No.</th><th>Type</th><th>No.</th><th>Amount</th></tr>
    <% @contribution_mix.each do |portion| %>
     <tr>
        <td>
             <% @contributor_counts.each do |contrib| %>
               <%=  contrib["number"] if contrib["kind"] == portion["kind"] %>
            <% end %>
        </td>
        <td><span class="contributor_kind"> <%= portion["kind"] %></span></td>
        <td><%= portion["number"] %> </td>
        <td><%= portion["total"].to_f/100 %> </td>
     </tr>
  <% end %>
  </table>
</div>
